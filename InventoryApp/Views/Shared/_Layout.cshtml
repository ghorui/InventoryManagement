<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Kamala Saree</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/Content/animate.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Content/templatemo-style.css">
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.singlePageNav.min.js"></script>
    <script src="~/Scripts/typed.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/1.1.1/typed.min.js"></script>*@
    <script src="~/Scripts/wow.min.js"></script>
    <script src="~/Scripts/custom.js"></script>



</head>
<body id="top">

    <div class="preloader">
        <div class="sk-spinner sk-spinner-wave">
            <div class="sk-rect1"></div>
            <div class="sk-rect2"></div>
            <div class="sk-rect3"></div>
            <div class="sk-rect4"></div>
            <div class="sk-rect5"></div>
        </div>
    </div>
    <!-- end preloader -->
    <!-- start header -->
    <header>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <p><i class="fa fa-phone"></i><span> Phone</span>(03473) 234 - 178</p>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <p><i class="fa fa-envelope-o"></i><span> Email</span><a href="#">arupsaree@gmail.com</a></p>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <ul class="social-icon">
                        <li><span>Meet us on</span></li>
                        <li><a href="#" class="fa fa-facebook"></a></li>
                        <li><a href="#" class="fa fa-twitter"></a></li>
                        <li><a href="#" class="fa fa-instagram"></a></li>
                    </ul>

                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <p><i class="fa fa-eye"></i><span> Hello</span><a href="#">@User.Identity.Name.Substring(0, User.Identity.Name.IndexOf('@'))</a></p>
                    </div>
                }
            </div>
        </div>
    </header>
    <!-- end header -->
    <!-- start navigation -->
    <nav class="navbar navbar-default templatemo-nav" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                </button>
                <a href="#" class="navbar-brand">Kamala Saree</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("HOME", "Index", "Home")</li>
                    <li>@Html.ActionLink("ABOUT", "About", "Home")</li>
                    <li>@Html.ActionLink("TEAM", "Team", "Home")</li>
                    <li>@Html.ActionLink("SERVICE", "Service", "Home")</li>
                    <li>@Html.ActionLink("PORTFOLIO", "Portfolio", "Home")</li>
                    <li>@Html.ActionLink("CONTACT", "Contact", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("BarCode", "PrintBarCode", "Home")</li>
                    }
                    <li>@Html.Partial("_LoginPartial")</li>
                    
</ul>
            </div>
        </div>
    </nav>

    <div id="home" class="container body-content">
        @RenderBody()

        <div>
            &nbsp;
        </div>
        <hr />
        <footer id="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-left">
                        <p class="wow bounceIn" data-wow-offset="50" data-wow-delay="0.3s">
                            Copyright &copy; @DateTime.Now.Year Kamala Saree
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
