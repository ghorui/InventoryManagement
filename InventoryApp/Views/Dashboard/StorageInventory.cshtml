@model List<InventoryApp.Models.Shopping.Product>

@{
    ViewBag.Title = "StorageInventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Available Products at Inventory (Godown)</h2>

<section style="color: black">
    <table class="table table-bordered table-responsive table-striped">
        <thead style="background-color: #F4B084">
            <tr>
                <td>
                    Bar Code
                </td>
                <td>
                    Name
                </td>
                <td>
                    Quantity
                </td>
                <td>
                    Price per Unit
                </td>
                <td>
                    Total Value
                </td>
            </tr>
        </thead>
        <tbody style="background-color: #D9D9D9">
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.BarCode
                        </td>
                        <td>
                            @item.ItemName
                        </td>
                        <td>
                            @item.Quantity
                        </td>
                        <td>
                            @item.UnitPrice
                        </td>
                        <td>
                            @item.Value
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">
                        There is no product to display!
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>




