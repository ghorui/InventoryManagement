@model List<InventoryApp.Models.Shopping.Product>

@{
    ViewBag.Title = "StorageInventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>StorageInventory</h2>

<table class="table table-bordered">
    <tbody>
        <tr>
            <td>
                ID
            </td>
            <td>
                Name
            </td>
            <td>
                Cost Per Pc
            </td>
            <td>
                Weight Per Pc
            </td>
            <td>
                Count
            </td>
        </tr>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CostPerPc
                    </td>
                    <td>
                        @item.WeightPerPc
                    </td>
                    <td>
                        @item.Count
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">
                    There is no product to display!
                </td>
            </tr>
        }
    </tbody>

</table>




