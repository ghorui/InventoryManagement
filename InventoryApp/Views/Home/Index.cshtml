@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Big Bazaar</h1>
    <p class="lead">Company details to be shown here.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-4">
            <h2>Dashboard</h2>
            <p>
                Dashboard to show existing inventory details.
            </p>
            <p><a class="btn btn-default" href="#" onclick="location.href='@Url.Action("ShopInventory","Dashboard")'">Shop dashboard &raquo;</a></p>
            <p><a class="btn btn-default" href="#" onclick="location.href='@Url.Action("StorageInventory","Dashboard")'">Inventory &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Godown</h2>
            <p>Details about Product Coming in</p>
            @if (User.IsInRole("Admin") || User.IsInRole("Owner") || User.IsInRole("SalesAgent"))
            {
                <p><a class="btn btn-default" href="#" onclick="location.href='@Url.Action("ShopInventory", "Dashboard")'">Product Coming in Shop &raquo;</a></p>
            }
            @if (User.IsInRole("Admin") || User.IsInRole("Owner") || User.IsInRole("InventoryAgent"))
            {
                <p><a class="btn btn-default" href="#" onclick="location.href='@Url.Action("StorageInventory", "Dashboard")'">Product coming in Inventory &raquo;</a></p>
            }
        </div>
        <div class="col-md-4">
            <h2>Showroom</h2>
            <p>Details about Product going out</p>
            @if (User.IsInRole("Admin") || User.IsInRole("Owner") || User.IsInRole("SalesAgent"))
            {
                <p><a class="btn btn-default" href="#" onclick="location.href='@Url.Action("ShopInventory", "Dashboard")'">Sell product from Shop &raquo;</a></p>
            }
            @if (User.IsInRole("Admin") || User.IsInRole("Owner") || User.IsInRole("InventoryAgent"))
            {
                <p><a class="btn btn-default" href="#" onclick="location.href='@Url.Action("StorageInventory", "Dashboard")'">Sell product from Inventory Inventory &raquo;</a></p>
            }
        </div>
    </div>
}